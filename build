#!/bin/bash

SCRIPT_LOCATION="$(cd -P "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo 'Building and packaging plugin...'

cd "$SCRIPT_LOCATION" || (echo 'Failed to find project root directory' && exit 1)

debuild -us -uc

cd debian || (echo 'Failed to find to .debian/ directory in project root' && exit 1)

dpkg-deb --build openmediavault-gpuutils

echo 'Build and package plugin COMPLETE'